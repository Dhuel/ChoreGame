<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheBoops.Views.UsersPage"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="{Binding AddText}"
                 IconImageSource="example_icon.png"
                 Order="Primary"
                 Priority="0"
                 Command="{Binding AddButtonClicked}"/>
    </ContentPage.ToolbarItems>
    <VerticalStackLayout>
        <ListView ItemsSource="{Binding Users}" 
                  HasUnevenRows="True" 
                  SeparatorVisibility="None"
                  SelectedItem="{Binding User, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <VerticalStackLayout>
                        <Frame CornerRadius="10"  HasShadow="False">
                            <StackLayout>
                                    <Label Text="{Binding UserNameDisplay, StringFormat='{0:F0}'}" TextColor="#504E4E" FontAttributes="Bold" FontSize="Large"/>
                            </StackLayout>
                        </Frame>
                        </VerticalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>